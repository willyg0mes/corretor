# Increase upload limits for property images and videos
# These settings work with PHP built-in server and Apache
php_value upload_max_filesize 1000M
php_value post_max_size 1200M
php_value max_execution_time 3600
php_value max_input_time 3600
php_value memory_limit 4096M
php_value max_file_uploads 200

# Additional settings for different server configurations
<IfModule mod_php.c>
    php_value upload_max_filesize 1000M
    php_value post_max_size 1200M
    php_value max_execution_time 3600
    php_value max_input_time 3600
    php_value memory_limit 4096M
    php_value max_file_uploads 200
</IfModule>

# For Nginx with PHP-FPM
<IfModule !mod_php.c>
    # These are handled by the middleware, but included here for completeness
    SetEnv PHP_VALUE "upload_max_filesize=1000M;post_max_size=1200M;max_execution_time=3600;max_input_time=3600;memory_limit=4096M;max_file_uploads=200"
</IfModule>

# Laravel specific rules
<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>